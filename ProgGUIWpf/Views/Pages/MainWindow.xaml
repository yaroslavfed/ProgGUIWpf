<Window x:Class="ProgGUIWpf.Views.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgGUIWpf.Views.Pages"
        xmlns:vm="clr-namespace:ProgGUIWpf.ViewModels"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="{Binding Title}" >
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход"></MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Status"/>
        </StatusBar>
        <TabControl>
            <TabItem Header="Вкладка 1">
                <TextBlock Text="Content of tab 1" />
            </TabItem>
            <TabItem Header="Вкладка 2">
                <TextBlock Text="Content of tab 2" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
