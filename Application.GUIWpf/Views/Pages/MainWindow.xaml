<Window x:Class="Application.GUIWpf.Views.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Application.GUIWpf.ViewModels"
        xmlns:models="clr-namespace:Application.GUIWpf.Models"
        xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Height="1024" Width="1440"
        Title="{Binding Title}"
        WindowState="Normal"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="window_MouseLeftButtonDown">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="#107300" Offset="0" />
            <GradientStop Color="#2C0073" Offset="0.73" />
        </LinearGradientBrush>
    </Window.Background>
    <Border Margin="30" Padding="100,10,100,75" Background="{StaticResource BorderWhiteOpacity}"
            Style="{StaticResource BorderRoundedTemplate}">
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="-35,30,0,30">
                <Button Style="{StaticResource SystemButtonClose}" Width="30" Height="30"
                        Margin="0,0,6,0" Command="{Binding CloseApplicationCommand}" />
                <Button Style="{StaticResource SystemButtonReduce}" Width="30" Height="30" Margin="6,0" />
                <Button Style="{StaticResource SystemButtonWrap}" Width="30" Height="30" Margin="6,0" />
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.RowSpan="2" Margin="0,0,40,0" Padding="60"
                        Background="{StaticResource BorderBlackOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Grid.Row="0" Margin="40,0,0,25" Padding="60"
                        Background="{StaticResource BorderBlackOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <DockPanel>
                        <Grid DockPanel.Dock="Top">
                            <TextBlock
                                Text="{Binding SelectedFile.Namespace, StringFormat='Points from file - {0}', FallbackValue='Points'}"
                                TextAlignment="Center" />
                        </Grid>
                        <DataGrid ItemsSource="{Binding SelectedFile.LocationsList}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  Background="Transparent"
                                  BorderBrush="Transparent">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="X">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:Location">
                                            <TextBox Text="{Binding PointX}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Y">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:Location">
                                            <TextBox Text="{Binding PointY}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Margin="40,20,0,10" Padding="50,30,50,40"
                        Background="{StaticResource BorderBlackOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <DockPanel>
                        <Grid DockPanel.Dock="Bottom">
                            <Button Content="Create new file" Width="215" Height="60"
                                    Style="{StaticResource CreateFileButton}"
                                    Command="{Binding CreateNewFileCommand}"
                                    HorizontalAlignment="Left" />
                            <Button Content="Delete selected file" Width="215" Height="60"
                                    Style="{StaticResource DeleteFileButton}"
                                    Command="{Binding DeleteNewFileCommand}"
                                    CommandParameter="{Binding SelectedFile}"
                                    HorizontalAlignment="Right" />
                        </Grid>
                        <UniformGrid Margin="0,5,0,20">
                            <ListBox ItemsSource="{Binding DataLocations}"
                                     SelectedItem="{Binding SelectedFile}"
                                     Background="Transparent"
                                     BorderBrush="Transparent">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="models:DataLocation">
                                        <!-- TODO: перенести в отдельный юзер контрол -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Namespace}" />
                                            <TextBlock
                                                Text="{Binding LocationsList.Count, StringFormat='[points count - {0}]'}"
                                                Margin="5,0,0,0">
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </UniformGrid>
                    </DockPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Border>
</Window>