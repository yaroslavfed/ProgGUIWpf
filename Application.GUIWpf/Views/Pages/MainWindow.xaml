<Window x:Class="Application.GUIWpf.Views.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Application.GUIWpf.ViewModels"
        xmlns:models="clr-namespace:Application.GUIWpf.Models"
        xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="{Binding Title}">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Status" />
        </StatusBar>
        <TabControl>
            <!-- TODO: перенести в отдельный юзер контрол -->
            <TabItem Header="Вкладка 1">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- TODO: перенести в отдельный юзер контрол -->
                    <Grid Grid.Column="0">
                        <GroupBox Margin="5">
                            <DataGrid ItemsSource="{Binding SelectedFile.LocationsList}" AutoGenerateColumns="False"
                                      CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="X">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate DataType="models:Location">
                                                <TextBox Text="{Binding PointX}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Y">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate DataType="models:Location">
                                                <TextBox Text="{Binding PointY}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <GroupBox.Header>
                                <TextBlock
                                    Text="{Binding SelectedFile.Namespace, StringFormat='Points from file - {0}', FallbackValue='Points'}"
                                    Foreground="White" />
                            </GroupBox.Header>
                        </GroupBox>
                    </Grid>
                    <!-- TODO: перенести в отдельный юзер контрол -->
                    <Grid Grid.Column="1">
                        <GroupBox Header="Files" Margin="5">
                            <DockPanel>
                                <UniformGrid DockPanel.Dock="Bottom" Rows="1" Margin="0,3">
                                    <Button Content="Create file" Command="{Binding CreateNewFileCommand}"
                                            Margin="0,0,3,0" />
                                    <Button Content="Delete file" Command="{Binding DeleteNewFileCommand}"
                                            CommandParameter="{Binding SelectedFile}" Margin="3,0,0,0" />
                                </UniformGrid>
                                <ListBox ItemsSource="{Binding DataLocations}" SelectedItem="{Binding SelectedFile}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="models:DataLocation">
                                            <!-- TODO: перенести в отдельный юзер контрол -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Namespace}" />
                                                <TextBlock
                                                    Text="{Binding LocationsList.Count, StringFormat='[points count - {0}]'}"
                                                    Margin="5,0,0,0">
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </DockPanel>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            <!-- TODO: возможно оно и не понадобится, пока в идее информационная страничка, но в неё переходить можно и из меню-->
            <TabItem Header="Вкладка 2">
                <TextBlock Text="Content of tab 2" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>