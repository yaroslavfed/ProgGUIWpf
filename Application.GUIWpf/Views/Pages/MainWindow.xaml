<Window x:Class="Application.GUIWpf.Views.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Application.GUIWpf.ViewModels"
        xmlns:models="clr-namespace:Application.GUIWpf.Models"
        xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Height="1024" Width="1440"
        Title="{Binding Title}"
        WindowState="Normal"
        WindowStyle="None"
        MouseLeftButtonDown="window_MouseLeftButtonDown">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="#710065" Offset="0" />
            <GradientStop Color="#0F006D" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Border Margin="30" Padding="90,0,90,90" Background="{StaticResource BorderWhiteOpacity}"
            Style="{StaticResource BorderRoundedTemplate}">
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,40,0,30">
                <Button Style="{StaticResource SystemButtonClose}" Width="25" Height="25"
                        Margin="0,0,6,0" Command="{Binding CloseApplicationCommand}" />
                <Button Style="{StaticResource SystemButtonReduce}" Width="25" Height="25" Margin="6,0" />
                <Button Style="{StaticResource SystemButtonWrap}" Width="25" Height="25" Margin="6,0" />
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.RowSpan="2" Margin="0,0,40,0" Padding="60"
                        Background="{StaticResource BorderWhiteOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Grid.Row="0" Margin="40,0,0,25" Padding="60"
                        Background="{StaticResource BorderWhiteOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <Grid>
                        <GroupBox>
                            <GroupBox.Header>
                                <TextBlock
                                    Text="{Binding SelectedFile.Namespace, StringFormat='Points from file - {0}', FallbackValue='Points'}"
                                    DockPanel.Dock="Top" />
                            </GroupBox.Header>
                            <DataGrid ItemsSource="{Binding SelectedFile.LocationsList}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="X">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate DataType="models:Location">
                                                <TextBox Text="{Binding PointX}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Y">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate DataType="models:Location">
                                                <TextBox Text="{Binding PointY}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Margin="40,20,0,10" Padding="60"
                        Background="{StaticResource BorderWhiteOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <GroupBox Header="Files">
                        <DockPanel>
                            <UniformGrid DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                                <Button Content="Добавить" Margin="0,10,10,0" Width="190" Height="60"
                                        Style="{StaticResource MainButton}"
                                        Command="{Binding CreateNewFileCommand}" />
                                <Button Content="Удалить" Margin="10,10,0,0" Width="190" Height="60"
                                        Style="{StaticResource MainButton}"
                                        Command="{Binding DeleteNewFileCommand}"
                                        CommandParameter="{Binding SelectedFile}" />
                            </UniformGrid>
                            <ListBox ItemsSource="{Binding DataLocations}"
                                     SelectedItem="{Binding SelectedFile}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="models:DataLocation">
                                        <!-- TODO: перенести в отдельный юзер контрол -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Namespace}" />
                                            <TextBlock
                                                Text="{Binding LocationsList.Count, StringFormat='[points count - {0}]'}"
                                                Margin="5,0,0,0">
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </GroupBox>
                </Border>
            </Grid>
        </DockPanel>
    </Border>
</Window>