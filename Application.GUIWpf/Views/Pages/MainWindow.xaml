<Window x:Class="Application.GUIWpf.Views.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Application.GUIWpf.ViewModels"
        xmlns:models="clr-namespace:Application.GUIWpf.Models"
        xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Height="1024" Width="1440"
        Title="{Binding Title}"
        WindowState="Maximized"
        WindowStyle="None">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="#710065" Offset="0" />
            <GradientStop Color="#0F006D" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Border Margin="30" Padding="90,0,90,90" Background="{StaticResource BorderWhiteOpacity}"
            Style="{StaticResource BorderRoundedTemplate}">
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,40,0,30">
                <Button Style="{StaticResource SystemButtonClose}" Width="25" Height="25"
                        Margin="0,0,6,0" Command="{Binding CloseApplicationCommand}" />
                <Button Style="{StaticResource SystemButtonReduce}" Width="25" Height="25" Margin="6,0" />
                <Button Style="{StaticResource SystemButtonWrap}" Width="25" Height="25" Margin="6,0" />
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.RowSpan="3" Margin="0,0,40,0" Padding="60"
                        Background="{StaticResource BorderWhiteOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Grid.Row="0" Margin="40,0,0,25" Padding="60"
                        Background="{StaticResource BorderWhiteOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Margin="40,25,0,0" Padding="60"
                        Background="{StaticResource BorderWhiteOpacity}"
                        Style="{StaticResource BorderCornerRadius}">
                    <Grid>
                    </Grid>
                </Border>
                <StackPanel Grid.Column="1" Grid.Row="2" Margin="40,25,0,0" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Margin="10,0,10,0" Width="170" Height="65" Style="{StaticResource MainButton}" />
                    <Button Margin="10,0,10,0" Width="170" Height="65" Style="{StaticResource MainButton}" />
                    <Button Margin="10,0,10,0" Width="170" Height="65" Style="{StaticResource MainButton}" />
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>