<Window x:Class="Application.GUIWpf.Views.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application.GUIWpf.Models"
        xmlns:vm="clr-namespace:Application.GUIWpf.ViewModels"
        xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="{Binding Title}">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Status" />
        </StatusBar>
        <TabControl>
            <TabItem Header="Вкладка 1">
                <!-- TODO: перенести в отдельный юзер контрол -->
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- TODO: перенести в отдельный юзер контрол -->
                    <Grid Grid.Column="0">
                        <GroupBox Header="Points" Margin="5">
                            <DataGrid ItemsSource=""/>
                        </GroupBox>
                    </Grid>
                    <!-- TODO: перенести в отдельный юзер контрол -->
                    <Grid Grid.Column="1">
                        <GroupBox Header="Files" Margin="5">
                            <ListBox ItemsSource="{Binding DataLocations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- TODO: перенести в отдельный юзер контрол -->
                                        <TextBlock Text="{Binding Namespace}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ListBox>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Вкладка 2">
                <TextBlock Text="Content of tab 2" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>